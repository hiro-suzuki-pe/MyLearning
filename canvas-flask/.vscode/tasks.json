{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Flask",   // メニューからタスクを選ぶ時の表示名
            "type": "shell",    // その他のシェルコマンド
            "options": {
                "env":  //  環境変数
                    {
                        "FLASK_APP":"app.py",
                        "FLASK_ENV":"development"
                    }
            },
            "command": "flask", // コマンド
            "args":[
                "run"   // コマンド引数
            ]
        }
    ]
}